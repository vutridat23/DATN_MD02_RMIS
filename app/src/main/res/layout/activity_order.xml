<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">

    <!-- Vertical content -->
    <LinearLayout
        android:id="@+id/content_column"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Header/top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:background="#2DB06A">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_arrow_back_24"
                android:tint="#FFFFFF" />

            <TextView
                android:id="@+id/header_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Menu phục vụ món"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"
                android:paddingStart="8dp"
                android:paddingEnd="8dp" />

            <!-- Table label on header right -->
            <TextView
                android:id="@+id/tv_table_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bàn 1"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"/>
        </LinearLayout>

        <!-- Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/tv_section_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách món ăn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/tv_section_sub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem, kiểm tra bàn ăn"
                android:textSize="13sp"
                android:textColor="#777777"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Ordered view container (shown by default) -->
        <LinearLayout
            android:id="@+id/ordered_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_ordered_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"/>

        </LinearLayout>

        <!-- Bottom summary for ordered view -->
        <LinearLayout
            android:id="@+id/order_summary"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="#FFFFFF"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="8dp">

                <TextView
                    android:id="@+id/tv_total_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng Tiền :"
                    android:textSize="16sp"
                    android:textColor="#222222"
                    android:layout_gravity="center_vertical"/>

                <TextView
                    android:id="@+id/tv_total_amount_ordered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 VND"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="16dp"
                    android:textColor="#222222"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_add_more"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:backgroundTint="#2DB06A"
                android:text="Thêm món"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- Menu container (hidden initially) - user can add items here -->
        <LinearLayout
            android:id="@+id/menu_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_menu_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:clipToPadding="false"
                android:paddingTop="4dp"
                android:paddingBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:orientation="vertical"
                android:padding="12dp"
                android:background="#FFFFFF"
                android:elevation="4dp">

                <Button
                    android:id="@+id/btn_confirm_order"
                    android:onClick="confirmAddItems"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Xác nhận lên đơn"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#2DB06A"
                    android:enabled="false" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Progress overlay (centered) -->
    <ProgressBar
        android:id="@+id/progress_bar_order"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:visibility="gone" />

</FrameLayout>