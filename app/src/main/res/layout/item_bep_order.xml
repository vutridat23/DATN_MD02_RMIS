<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Row: thumbnail + info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/imgThumb"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_placeholder"
                android:contentDescription="Ảnh món" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/txtTenMon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên món"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/txtTableInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bàn 1"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">

                    <TextView
                        android:id="@+id/txtQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng: 1"
                        android:textSize="13sp"
                        android:textColor="#666666" />

                    <TextView
                        android:id="@+id/txtPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#666666" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Status text (kept, styled) -->
        <TextView
            android:id="@+id/txtTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái: pending"
            android:layout_marginBottom="8dp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:textSize="13sp" />

        <!-- Buttons row (KEEP the four buttons and IDs unchanged) -->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnDanNhan"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Đã nhận"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:backgroundTint="#FFB300" />

            <Button
                android:id="@+id/btnDangLam"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Đang làm"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:backgroundTint="#03A9F4" />

            <Button
                android:id="@+id/btnXongMon"
                android:layout_width="5dp"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="Xong món"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btnHetMon"
                android:layout_width="5dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Hết món"
                android:textSize="10sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:backgroundTint="#F44336" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>