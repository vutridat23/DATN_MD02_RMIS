<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="3dp">

    <LinearLayout
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtTenMon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên món"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#333333"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/txtTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trạng thái"
            android:layout_marginBottom="8dp"
            android:textColor="#03A9F4"
            android:textStyle="bold"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:gravity="center_vertical">

            <Button
                android:id="@+id/btnDanNhan"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Đã nhận"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:backgroundTint="#FFB300" />

            <Button
                android:id="@+id/btnDangLam"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Đang làm"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:backgroundTint="#03A9F4" />

            <Button
                android:id="@+id/btnXongMon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Xong món"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:backgroundTint="#4CAF50" />

            <Button
                android:id="@+id/btnHetMon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Hết món"
                android:textSize="11sp"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:backgroundTint="#F44336" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>