<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5">

    <!-- Scrollable content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <!-- Main white card area: wrap_content so NestedScrollView can scroll -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <!-- Top row: menu icon, search and avatar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/ic_menu"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/baseline_menu_24"
                        android:contentDescription="menu" />

                    <EditText
                        android:id="@+id/et_search"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/search"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:gravity="center_vertical"
                        android:hint="Search" />

                    <ImageView
                        android:id="@+id/avatar"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/baseline_account_circle_24"
                        android:contentDescription="avatar" />
                </LinearLayout>

                <!-- Floor 1 header -->
                <TextView
                    android:id="@+id/header_floor1"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="TẦNG 1"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="#2BB673" />

                <!-- Grid of tables for floor 1 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_floor1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false" />

                <!-- Floor 2 header -->
                <TextView
                    android:id="@+id/header_floor2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="TẦNG 2"
                    android:textColor="#ffffff"
                    android:textStyle="bold"
                    android:background="#2BB673" />

                <!-- Grid of tables for floor 2 -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler_floor2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:nestedScrollingEnabled="false" />

                <!-- spacer to make room for bottom nav -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.core.widget.NestedScrollView>

    <!-- Loading center (overlay) -->
    <ProgressBar
        android:id="@+id/progress_bar_loading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone" />

    <!-- Bottom navigation bar (fixed overlay) -->


</androidx.coordinatorlayout.widget.CoordinatorLayout>