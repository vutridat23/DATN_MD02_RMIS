<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Toolbar -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#B71C1C"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationIconTint="#FFFFFF">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CẢNH BÁO NGUYÊN LIỆU"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="center" />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Summary Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvWarningCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số nguyên liệu cảnh báo: 0"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#F44336"
                android:drawablePadding="8dp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvOutOfStockCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hết hàng: 0"
                android:textSize="14sp"
                android:textColor="#F44336"/>

            <TextView
                android:id="@+id/tvLowStockCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sắp hết: 0"
                android:textSize="14sp"
                android:textColor="#FF9800"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- RecyclerView for warnings -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvWarnings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"/>

</LinearLayout>
