<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginHorizontal="4dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="70dp"
            android:layout_height="70dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/iv_item_thumb"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_menu_placeholder" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên món ăn"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tv_item_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú: ..."
                android:textSize="13sp"
                android:textColor="#757575"
                android:textStyle="italic"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/tv_item_huy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đã hủy: Hết nguyên liệu"
                android:textSize="13sp"
                android:textColor="#D32F2F"
                android:textStyle="bold"
                android:layout_marginTop="2dp"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tv_item_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150.000đ"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#AA0000"/>

            <TextView
                android:id="@+id/tv_item_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#555555"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tv_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang nấu"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_status_badge"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>